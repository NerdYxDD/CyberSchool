body{
	font-family: 'Lobster', cursive;
	margin: 0;

	font-size: 25px;
	line-height: 1.5;
	background-color: #000; 
	color: #fff;

	padding: 0 0px;
	margin: 0 auto;
}	

ul{       
	padding: 0;
	margin: 0;
	list-style: none;
	padding-top: 50px;
}

li{
	padding-left: 0;
}

a{
	text-decoration: none;
	color: inherit;
}

p{
    font-size: 30px;
    text-align: -webkit-center;
}                                    

.header{
	position: fixed;
	border-bottom: 1px solid white;
	width: 100%;
	height: 100px;
	background-color: black;
}

.header__inner{
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: -60px;
	float: left;
}

.container{
	max-width: 2000px;
	padding: 0px auto;
	margin: 0px auto;	
}

.menu{
	margin-right: 70px;
}

.menu__list{
	display: flex;
	position: absolute;
	left: 100px;
	top: -15px;
}

.menu__list-item + .menu__list-item{
	padding-left: 10px;
}

.menu__link{
	padding: 20px 20px;
}

.banner__top{
	padding-top: 20px;
	padding-bottom: 0px;
}
.banner__title{
	margin-left: 400px;
	color: #fff;
	margin-top: 120px;
}
.banner__top .banner__title h1{
	font-size: 60px;
}

.banner__top .banner__subtitle p{
	font-size: 20px;
}

.logo{
   position: absolute;
   left: -20px;
   top: 20px;
}

.logo_img{
	border: 5px;
	height: 100px;
	width: 100px;
}

.search{
	display: flex;
	justify-content: center;
}

.search_fromTo{
	width: 50px;
	height: 60px;
}

.search input{
	height: 60px;
	width: 180px;
	padding: 0px 10px 0px 10px;
}

.search select{
	padding: 0px 10px 0px 10px;
}

.select_whereFrom{
	border-radius: 10px 0px 0px 10px;
}

.search .button{
	cursor: pointer;
	background-color: #97ba1e;
	width: 70px;
	border-radius: 0px 10px 10px 0px;
}

.search .button img{
	width: 30px;
	height: 30px;
}

.stocks__title{
	font-size: 32px;
}

.stocks__content{
	display: flex;
	justify-content: space-between;
}

.stock{
	position: relative;
	width: 320px;
	height: 294px;
	margin-top: 30px;
	webkit-box-shadow: 0px 5px 10px 2px rgba(0, 0, 0, 0.29);
	moz-box-shadow: 0px 5px 10px 2px rgba(0, 0, 0, 0.29);
	box-shadow: 0px 5px 10px 2px rgba(0, 0, 0, 0.29);
}

.stocks-text{
	padding: 5px;
	text-transform: uppercase;
	color: white;
	text-align: center;
	background: red;
}

.travel__stocks{
	position: absolute;
	color: #fff;
	bottom: 0;
	width: 100%;
	text-align: center;
	background-color: red;
}

.stocks__1{
	background-image: url(img/stocks__1.png);
	background-size: cover;
}

.stocks__2{
	background-image: url(img/stocks__2.png);
	background-size: cover;
}

.stocks__3{
	background-image: url(img/stocks__3.png);
	background-size: cover;
}

.content__email-text{
	padding: 10px;
}

