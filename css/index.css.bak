.sub__input{
border-radius: 50px;
width: 250px;
height: 25px;
}

.sub__button{
border-radius: 20px;
width: 100px;
height: 25px;
}

.authorization__inner{
	background-color: #fff;
	width: 350px;
	padding: 50px;
	border-radius: 10px;
	margin: 0 auto;
	margin-top: 100px;
	margin-bottom: 100px;
	box-shadow: 0px 5px 10px 2px rgba(0, 0, 0, 0.29);
}

.autho__title{
	text-align: center;
	margin-bottom: 20px;
	font-size: 40px;
	margin-top:-20px;
}

.authorization: input{
	width: 100%;
	height: 30px;
	border: 1px solid #27344b;
	border-radius: 10px;
}

.auto_phone{
	padding-left: 16px;
	margin-bottom: 30px;
}

.auto_password{
	padding-left: 16px;
}

.img-line{
    display: flex;
    text-decoration: none;
	justify-content: center;
	gap: 50px;
}

.event__title{
	color: #fff;
	text-align: center;
	border-top: 1px solid #fff;
	margin-top: 50px;
	padding-top: 30px;
}

.event__img{
	height: 250px;
}

.events__image{
	display: flex;
	justify-content: center;
	gap: 32px;
	border-bottom: 1px solid #fff;
	padding-bottom: 60px;
}

.event_link{
	text-align: center;
	margin-right: 5px;
	margin-top :-54px;
}

.review__title{
	display: flex;
	justify-content: center;
}

.review__video{
	display: flex;
	justify-content: center;
	gap: 50px;
}
